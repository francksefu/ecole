<h1 class="text-secondary text-center"> Create paiement </h1>

<div class= 'border border-1 mt-3 w-50 p-3 d-block mx-auto'>
<%= form_with model: @paiement, url: student_detail_paiement_classroom_paiements_path, method: :post, class: 'w-100', local: true do |form| %>
  
  <div class='input-group mb-3'>
  <%= form.label :montant, class: 'input-group-text' %>
  <%= form.number_field :montant, step: :any, class: 'form-control'%>
  </div>

<%= form.submit class: 'btn btn-primary' %>
<% end %>