<h1 class='text-secondary text-center'> Create paiement for this year</h1>
<div class= 'border border-1 mt-3 w-50 p-3 d-block mx-auto'>
<%= form_with model: @detail_paiement, url: year_detail_paiements_path, method: :post, class: 'w-100', local: true do |form| %>
<div class='input-group mb-3'>
  <%= form.label :frais_name, class: 'input-group-text' %>
  <%= form.text_field :frais_name, class: 'form-control'%>
</div>
<div class='input-group mb-3'>
  <%= form.label :montant, class: 'input-group-text'%>
  <%= form.number_field :montant,step: :any, class: 'form-control' %>
</div>
<div class='input-group mb-3'>
  <%= form.label :end_date, class: 'input-group-text' %>
  <%= form.date_field :end_date, class: 'form-control' %>
</div>

<div class='input-group mb-3'>
  <%= form.label :description, class: 'input-group-text' %>
  <%= form.text_area :description, class: 'form-control' %>
</div>
<%= form.submit class: 'btn btn-primary' %>
<% end %>