<div class="row">
<div class="col-md-3"> </div>
<div class= 'border bg-light border-1 col-md-6 p-3 position-absolute top-50 start-50 translate-middle'>
<h2 class="text-secondary text-center"> Log in </h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field mb-3 row">
    <%= f.label :email, class: "col-sm-2 col-form-label" %><br />
    <div class="col-sm-10">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
  </div>

  <div class="field mb-3 row">
    <%= f.label :password, class: "col-sm-2 col-form-label" %><br />
    <div class="col-sm-10">
    <%= f.password_field :password, class: "form-control" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions p-3 ">
    <%= f.submit "Log in",class: 'btn btn-primary bleu w-75 d-block mx-auto'  %>
  </div>
<% end %>
</div>
<div class='col-md-3'></div>
</div>
