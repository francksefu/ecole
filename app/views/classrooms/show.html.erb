<div class="container-fluid">
<div class='w-50 d-block mx-auto'>
  <div class='text-secondary d-flex justify-content-between border border-1 p-3 m-3'>
    <div>
      <h3><%= @classroom.name %> <%= @classroom.classement %></h3>
      <h6><%= @classroom.section.name %> </h6>
    </div>
    <div class='ms-3 me-3'>
      <a href='<%= classroom_classroom_teachers_path(@classroom) %>' class='btn btn-dark'> See teachers for every course </a>
    </div>
  </div>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">name</th>
      <th scope="col">credit</th>
      <th scope="col">description</th>
    </tr>
  </thead>
  <tbody>
  <% @classroom_courses.each do |classroom_course| %>
    <tr>
      <td><%= classroom_course.course.name %></td>
      <td><%= classroom_course.course.credit %> </td>
      <td><%= classroom_course.course.description %> </td>
      <td> action</td>
    </tr>
  <% end %>
  </tbody>
</table>

<a class='btn btn-primary' href='<%= new_classroom_classroom_course_path(@classroom) %>'> Add course to this classroom</a>
</div>