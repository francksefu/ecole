
<%= render "accountants/accountant"%>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
    <%= form_with url: "/student_promotions", method: :get do |form| %>
  <%= form.label :student_id, "Search for:" %>
  <%= form.text_field :student_id %>
  <%= form.submit "Search" %>
  <datalist id='student_list'>
          <% @students.find_each do |student| %>
          <option value="<%= student.id %>"><%= student.name %> <%= student.first_name %> <%= student.last_name %></option>
          <% end %>
        </datalist>
      </div>
    <% end %> 
      
    </div>
    <div class="col-md-2"> </div>
</div>
<div class="">
<h3 class="text-center text-secondary"> Liste of 500 recent paiements </h3>
<% if @paiements.empty?%>
  <h3 class ="text-secondary text-center"> Not paiement yet </h3>
<% else %>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col"> name of student</th>
      <th scope="col">classroom</th>
       <th scope="col">amount</th>
      <th scope="col">date and time of paiement</th>
      <th scope="col">action</th>
    </tr>
  </thead>
  <tbody>
  <% @paiements.find_each do |paiement| %>
    <tr>
      <td><%="#{paiement.student.name} #{paiement.student.first_name} #{paiement.student.last_name}"%> </td>
      <td><%= paiement.detail_paiement_classroom.classroom.name %></td>
      <td> <%= paiement.montant %> $</td>
      <td> <%= paiement.updated_at %></td>
      <td> action</td>
    </tr>
  <% end %>
  </tbody>
</table>
<% end %>
</div>

