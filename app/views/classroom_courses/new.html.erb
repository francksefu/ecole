<h1 class="text-secondary text-center"> Create classroom </h1>

<div class= 'border border-1 mt-3 w-50 p-3 d-block mx-auto'>
<%= form_with model: @classroom_course, url: classroom_classroom_courses_path, method: :post, class: 'w-100', local: true do |form| %>

  <div class="input-group mb-3">
    <%= form.label :course_id, class: "input-group-text" %>
    <%= form.select :course_id, @courses.map {|course| [course.description, course.id]}, {}, {class: 'form-control'} %>
  </div>

<%= form.submit class: 'btn btn-primary' %>
<% end %>