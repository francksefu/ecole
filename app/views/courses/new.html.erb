<h1 class="text-secondary text-center"> Create classroom </h1>

<div class= 'border border-1 mt-3 w-50 p-3 d-block mx-auto'>
<%= form_with model: @course, url: courses_path, method: :post, class: 'w-100', local: true do |form| %>
<div class='input-group mb-3'>
  <%= form.label :name, class: 'input-group-text' %>
  <%= form.text_field :name, class: 'form-control'%>
</div>

<div class='input-group mb-3'>
  <%= form.label :credit, class: 'input-group-text' %>
  <%= form.number_field :credit, class: 'form-control'%>
</div>


  <div class='input-group mb-3'>
  <%= form.label :description, class: 'input-group-text' %>
  <%= form.text_area :description, class: 'form-control'%>
</div>
<%= form.submit class: 'btn btn-primary' %>
<% end %>